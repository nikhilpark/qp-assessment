{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck":true,
    "allowSyntheticDefaultImports" : true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}